<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BankApp.Views.LoginLastStepView">
    <ContentPage.Content>

        <Grid BackgroundColor="Black">
            <StackLayout  Margin="20,200,20,20">
                <Label  TextColor="White" FontSize="20" Text="Введите номер карты"></Label>
                <Entry Keyboard="Numeric" TextColor="White"  PlaceholderColor="White" WidthRequest="200" Margin="0,40,0,0" Placeholder="Пароль" HorizontalTextAlignment="Center" FontSize="20" MaxLength="16"  HorizontalOptions="CenterAndExpand" Text="{Binding Password}"></Entry>
                <Button CornerRadius="5" BackgroundColor="White" TextColor="Black" Text="Войти"  Margin="0,40,0,0" Command="{Binding GoToAppCommand}"></Button>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>